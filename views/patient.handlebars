<div class="container">

  <div class="jumbotron">
    <h1 class="text-center">HEALTHCARE SOLUTIONS</h1>
    <hr>
    <h5 class="text-center">Patient Information</h5>
    <br>

    <div class="text-center">

      {{!-- <button class="btn btn-lg btn-primary">Last Visits</button> --}}
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#centralModalMd">
        Add Visit Notes
      </button>

      <a href="/">
        <button class="btn btn-lg btn-default">
          <span class="fa fa-home"></span>
        </button>
      </a>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-6">
        <div class="card">
          <div class="card-header">
            Patient Info
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>First Name:</strong> {{patients.firstName}} </li>
              <li class="list-group-item"><strong>Last Name:</strong> {{patients.lastName}}</li>
              <li class="list-group-item"><strong>Phone Number:</strong> {{patients.phone}}</li>
              <li class="list-group-item"><strong>Email Address:</strong> {{patients.email}}</li>
              <li class="list-group-item"><strong>Address:</strong> {{patients.address1}} {{patients.address2}}</li>
              <li class="list-group-item"><strong>City:</strong> {{patients.city}}</li>
              <li class="list-group-item"><strong>State:</strong> {{patients.state}}</li>
              <li class="list-group-item"><strong>Zipcode:</strong> {{patients.zipcode}}</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="card">
          <div class="card-header">
            Visit Information
          </div>
          <div class="card-body">
            {{#each patients.Visits}}
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>Date:</strong> {{createdAt}}</li>
              <li class="list-group-item"><strong>Notes:</strong> {{notes}}</li>
            </ul>
            {{/each}}
          </div>
        </div>
      </div>
    </div>


